DEVICE={{ neutron_ext_bridge }}
DEVICETYPE=ovs
TYPE=OVSBridge
ONBOOT=yes
MACADDR={{ hostvars[groups['packstacktest'][0]].ansible_default_ipv4.macaddress }}
OVSEXTRA="set bridge $DEVICE other-config:hwaddr=$MACADDR"

# allow the external bridge to work with DHCP
OVSBOOTPROTO=dhcp
OVSDHCPINTERFACES={{ hostvars[groups['packstacktest'][0]].ansible_default_ipv4.alias }}
